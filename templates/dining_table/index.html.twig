{% extends 'base.html.twig' %}

{% block title %}DiningTable index{% endblock %}

{% block body %}
    <h1>DiningTable index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Capacity</th>
                <th>Isreserved</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for dining_table in dining_tables %}
            <tr>
                <td>{{ dining_table.id }}</td>
                <td>{{ dining_table.capacity }}</td>
                <td>{{ dining_table.isreserved ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('app_dining_table_show', {'id': dining_table.id}) }}">show</a>
                    <a href="{{ path('app_dining_table_edit', {'id': dining_table.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_dining_table_new') }}">Create new</a>
{% endblock %}
